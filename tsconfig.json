{
  "compilerOptions": {
    "target": "ES2015",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["DOM", "ESNext"],
    "declaration": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "downlevelIteration": true
  },
  "exclude": [
    "**/node_modules/*",
    "**/cjs/*",
    "**/esm/*"
  ]
}
